# SKILLFORGE Environment Variables

# API Configuration
PORT=5174

# MongoDB Connection
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/skillforge?retryWrites=true&w=majority

# JWT Authentication
# Generate a strong secret for JWT token signing
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Frontend Configuration
VITE_API_URL=http://localhost:5174

# Google OAuth (if implemented)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_CALLBACK_URL=http://localhost:5173/api/auth/google/callback

# Email Service (if implemented)
# EMAIL_SERVICE=smtp.example.com
# EMAIL_USERNAME=your_email@example.com
# EMAIL_PASSWORD=your_email_password
# EMAIL_FROM=noreply@skillforge.com

# File Upload (if implemented)
# UPLOAD_DIRECTORY=uploads
# MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=info